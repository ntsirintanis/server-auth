<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_company_form" model="ir.ui.view">
        <field name="name">Add template user to the company form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <field name="website" position="after">
                <field name="minimal_enable_autocreate" />
                <field
                    name="minimal_template_user_id"
                    context="{'active_test': False}"
                    attrs="{'invisible': [('minimal_enable_autocreate', '=', False)]}"
                    />
                <field
                    name="minimal_category_id"
                    attrs="
                    {'invisible': [('minimal_enable_autocreate', '=', False)],
                    'required': [('minimal_enable_autocreate', '=', True)]}"
                    />
            </field>
        </field>
    </record>

</odoo>
